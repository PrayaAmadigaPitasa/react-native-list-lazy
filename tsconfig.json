{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components": [
        "./src/components"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@types": [
        "./src/types"
      ],
      "@utils": [
        "./src/utils"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
}